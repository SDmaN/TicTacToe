<Window x:Class="WpfGame.ViewModel.LobbyCreateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfGame.ViewModel"
        mc:Ignorable="d"
        Title="LobbyCreateWindow" Height="130" Width="300">
    <StackPanel Margin="6">

        <TextBlock Text="Выберите кем вы будете играть" Margin="10,10,0,0" />
        <StackPanel Orientation="Horizontal" Margin="10,10,0,0">
            <RadioButton x:Name="TicChoise" Content="Крестики" GroupName="TicTacChoise" IsChecked="True" />
            <RadioButton Content="Нолики" GroupName="TicTacChoise" Margin="20,0,0,0" />
        </StackPanel>
        <Button Content="Перейти к полю" Margin="0,10,0,0" Click="CreateLobby"/>
    </StackPanel>
</Window>
