<Window x:Class="WpfGame.LobbyListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfGame"
        mc:Ignorable="d"
        Title="LobbyListWindow" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ListBox x:Name="LobbyList" Margin="0,0,0,0" Grid.Row="0"/>
        <Button Content="Вступить" Margin="30,0,187,0" VerticalAlignment="Top" Click="LobbyIn" Grid.Row="1"/>
        <Button Content="Создать" Margin="115,0,102,0" VerticalAlignment="Top" Click="CreateLobby" Grid.Row="1"/>
        <Button Content="Обновить" Margin="200,0,17,0" VerticalAlignment="Top" Click="RefreshScreen" Grid.Row="1"/>

    </Grid>
</Window>
