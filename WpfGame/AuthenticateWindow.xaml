<Window x:Class="WpfGame.AuthenticateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"        
        mc:Ignorable="d"
        Title="Авторизация" Height="196.667" Width="300">
    <Grid Margin="0,0,2,4">

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBox x:Name="LoginBox" Margin="114,48,20,0" TextWrapping="Wrap" Height="26" VerticalAlignment="Top" Grid.Row="0" Grid.Column="0"/>
        <Label Content="Логин - " Margin="10,48,206,0" Height="26" VerticalAlignment="Top" Grid.Row="0" Grid.Column="0"/>
        <Button Content="Войти" Margin="114,30,102,0" Click="LogIn" Grid.Row="1" Grid.Column="0" Height="20" VerticalAlignment="Top"/>
    </Grid>
</Window>
